{
  "name": "snapshot-fs",
  "version": "1.0.3",
  "type": "module",
  "description": "Create a filesystem snapshot for use with memfs",
  "author": "Christopher Hiller <boneskull@boneskull.com>",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=20.0.0"
  },
  "bin": {
    "snapshot-fs": "./dist/esm/cli.js"
  },
  "main": "./dist/commonjs/index.js",
  "module": "./dist/esm/index.js",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/commonjs/index.d.ts",
        "default": "./dist/commonjs/index.js"
      }
    }
  },
  "types": "./dist/commonjs/index.d.ts",
  "files": [
    "dist",
    "!dist/*/test"
  ],
  "keywords": [
    "memfs",
    "snapshot",
    "fs",
    "filesystem",
    "image",
    "directory",
    "tree",
    "hierarchy",
    "persist",
    "clone",
    "test",
    "cli",
    "command",
    "tool"
  ],
  "scripts": {
    "build": "node --env-file=.build.env ./node_modules/.bin/tshy",
    "coverage": "c8 --all --include src npm run test",
    "lint": "run-p lint:*",
    "lint-commit": "commitlint",
    "lint-staged": "lint-staged",
    "lint:deps": "depcruise -c ./.config/dependency-cruiser.cjs src",
    "lint:sources": "eslint .",
    "prepare": "npm run build",
    "test": "glob -c \"node --import tsx --test\" \"./src/test/*.spec.ts\""
  },
  "dependencies": {
    "glob": "11.0.0",
    "is-binary-path": "2.1.0",
    "memfs": "4.14.0"
  },
  "devDependencies": {
    "@commitlint/cli": "19.5.0",
    "@commitlint/config-conventional": "19.5.0",
    "@eslint/js": "9.15.0",
    "@matteo.collina/snap": "0.3.0",
    "@stylistic/eslint-plugin-js": "2.10.1",
    "@stylistic/eslint-plugin-ts": "2.10.1",
    "@tsconfig/node20": "20.1.4",
    "@types/eslint__js": "8.42.3",
    "@types/node": "22.9.0",
    "c8": "10.1.2",
    "dependency-cruiser": "16.6.0",
    "eslint": "9.15.0",
    "eslint-plugin-jsonc": "2.18.2",
    "eslint-plugin-n": "17.13.2",
    "husky": "9.1.6",
    "lint-staged": "15.2.10",
    "npm-run-all2": "7.0.1",
    "prettier": "3.3.3",
    "prettier-plugin-jsdoc": "1.3.0",
    "prettier-plugin-organize-imports": "4.1.0",
    "prettier-plugin-pkg": "0.18.1",
    "tshy": "3.0.2",
    "tsx": "4.19.2",
    "typescript": "5.6.3",
    "typescript-eslint": "8.14.0"
  },
  "lint-staged": {
    "*.{js,json,md,ya?ml}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "prettier": {
    "jsdocCommentLineStrategy": "keep",
    "jsdocPreferCodeFences": true,
    "jsdocTagsOrder": "{\"template\": 24.5}",
    "plugins": [
      "prettier-plugin-jsdoc",
      "prettier-plugin-pkg",
      "prettier-plugin-organize-imports"
    ],
    "singleQuote": true,
    "tsdoc": true
  },
  "tshy": {
    "exports": {
      "./package.json": "./package.json",
      ".": "./src/index.ts"
    },
    "selfLink": false
  }
}
