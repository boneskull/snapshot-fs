{
  "name": "snapshot-fs",
  "version": "5.0.3",
  "type": "module",
  "description": "Create a filesystem snapshot for use with memfs",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/boneskull/snapshot-fs.git"
  },
  "homepage": "https://github.com/boneskull/snapshot-fs",
  "author": "Christopher Hiller <boneskull@boneskull.com>",
  "license": "Apache-2.0",
  "engines": {
    "node": "^22.13.0 || ^24.0.0"
  },
  "bin": {
    "snapshot-fs": "dist/cli.js"
  },
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.cts",
  "exports": {
    "./package.json": "./package.json",
    "./cli.js": {
      "import": {
        "types": "./dist/cli.d.ts",
        "default": "./dist/cli.js"
      },
      "require": {
        "types": "./dist/cli.d.cts",
        "default": "./dist/cli.cjs"
      }
    },
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "keywords": [
    "memfs",
    "snapshot",
    "fs",
    "filesystem",
    "image",
    "directory",
    "tree",
    "hierarchy",
    "persist",
    "clone",
    "test",
    "cli",
    "command",
    "tool"
  ],
  "scripts": {
    "build": "tsup --experimental-dts",
    "dev": "npm run build -- --watch",
    "lint": "run-p lint:*",
    "lint-commit": "commitlint",
    "lint-staged": "lint-staged",
    "lint:deps": "knip",
    "lint:sources": "eslint .",
    "prepare": "husky; npm run build",
    "test": "node --import tsx --test \"./test/*.test.ts\"",
    "test:ci": "npm run test:coverage",
    "test:coverage": "c8 --all --include src npm test",
    "test:update": "node --import tsx --test --test-update-snapshots \"./test/*.test.ts\""
  },
  "dependencies": {
    "@jsonjoy.com/json-pack": "1.11.0",
    "json-stable-stringify": "1.3.0",
    "memfs": "4.17.2",
    "supports-color": "10.2.0",
    "tree-dump": "1.0.3",
    "yargs": "18.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "19.8.1",
    "@eslint/js": "9.34.0",
    "@microsoft/api-extractor": "7.52.8",
    "@stylistic/eslint-plugin": "4.4.1",
    "@types/node": "22.17.2",
    "@types/yargs": "17.0.33",
    "c8": "10.1.3",
    "eslint": "9.34.0",
    "eslint-plugin-jsonc": "2.20.1",
    "eslint-plugin-n": "17.21.3",
    "eslint-plugin-perfectionist": "4.15.0",
    "husky": "9.1.7",
    "knip": "5.63.0",
    "lint-staged": "16.1.5",
    "npm-run-all2": "8.0.4",
    "prettier": "3.6.2",
    "prettier-plugin-jsdoc": "1.3.3",
    "prettier-plugin-organize-imports": "4.2.0",
    "prettier-plugin-pkg": "0.21.2",
    "tsup": "8.5.0",
    "tsx": "4.20.4",
    "typescript": "5.9.2",
    "typescript-eslint": "8.40.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "knip": {
    "ignore": [
      ".wallaby.js",
      "**/*.cts",
      "**/*.d.ts"
    ],
    "node": {
      "entry": [
        "test/*.test.ts"
      ]
    }
  },
  "lint-staged": {
    "*.{ts,cts,js,json,md,yml,json5}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "prettier": {
    "jsdocCommentLineStrategy": "keep",
    "jsdocPreferCodeFences": true,
    "plugins": [
      "prettier-plugin-jsdoc",
      "prettier-plugin-pkg",
      "prettier-plugin-organize-imports"
    ],
    "singleQuote": true,
    "tsdoc": true
  },
  "tsup": {
    "entry": [
      "src/index.ts",
      "src/cli.ts"
    ],
    "shims": true,
    "splitting": false,
    "sourcemap": true,
    "clean": true,
    "format": [
      "cjs",
      "esm"
    ]
  }
}
